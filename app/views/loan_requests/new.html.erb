<div class="max-w-md mx-auto bg-white p-8 rounded-md shadow-md">
  <h2 class="text-2xl font-bold mb-6 text-center">New Loan Application</h2>
  
  <%= form_with model: @loan_request, url: loan_requests_path, local: true, class: "space-y-4" do |f| %>
    <% if @loan_request.errors.any? %>
      <div id="error_explanation" class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-md">
        <h2 class="text-lg font-semibold">There were errors with your submission:</h2>
        <ul class="mt-2 list-disc pl-5">
          <% @loan_request.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :address, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :loan_term, "Loan term (in months)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :loan_term, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :purchase_price, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :purchase_price, step: 0.01, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :repair_budget, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :repair_budget, step: 0.01, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :arv, "After repair value (ARV)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :arv, step: 0.01, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
      <%= f.telephone_field :phone, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.submit "Submit", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
</div>
